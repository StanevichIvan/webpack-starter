{
  "name": "webpack-configuration",
  "version": "1.0.0",
  "description": "FE webpack configuration",
  "main": "index.js",
  "scripts": {
    "webpack-dev-server": "webpack-dev-server",
    "test": "cross-env-shell NODE_ENV=testing \"jest\"",
    "test-watch": "cross-env-shell NODE_ENV=testing \"jest --watch\"",
    "webpack": "webpack",
    "dev": "npm run webpack-dev-server -- --env.mode development --watch --hot",
    "debug": "node --inspect --inspect-brk ./node_modules/webpack/bin/webpack.js",
    "dev:debug": "npm run debug -- --env.mode development",
    "prod": "npm run webpack -- --env.mode production --env.presets compress",
    "prod:debug": "npm run debug -- --env.mode production",
    "prod:analyzer": "npm run prod -- --env.presets analyzer",
    "lint-js": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint-css": "stylelint '+(**/*.css|**/*.scss|**/*.tsx|**/*.ts|**/*.html)'",
    "lint": "npm run lint-js && npm run lint-css",
    "prettier:format": "prettier --write 'src/**/*.{js?(x),ts?(x),json,scss}'"
  },
  "author": "Ivan",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.3.0",
    "compression-webpack-plugin": "^3.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "jest-alias-preprocessor": "^1.1.1",
    "jest-cli": "^26.0.1",
    "jest-styled-components": "^7.0.2",
    "lint-staged": "^10.1.7",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^7.0.32",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-jsx": "^0.36.4",
    "postcss-loader": "^7.0.2",
    "postcss-nested": "^4.2.3",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-scss": "^2.1.1",
    "postcss-syntax": "^0.36.2",
    "postcss-url": "^8.0.0",
    "prettier": "^2.0.5",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.3.0",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run prettier:format"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/app/tests/file.mock.ts"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.(test|spec).ts?(x)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "globals": {}
  }
}
